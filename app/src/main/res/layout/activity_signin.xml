<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".SigninActivity">


        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:layout_margin="10dp"

            />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9sp"
        android:layout_marginTop="225sp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="429sp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="left"
        android:text="Welcome Back"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/signin_edittext_container"
        android:layout_margin="20dp"
        >


        <EditText
            android:id="@+id/signin_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"


            android:padding="10dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/signin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin_mail"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp"

            android:textSize="20dp" />

        <ImageView
            android:id="@+id/hide_pass_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signin_mail"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_remove_red_eye_24" />


    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/signin_edittext_container"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:gravity="center"

    >

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/signin_btn"
        android:text="Sign-in"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:cornerRadius="50dp"
        />


