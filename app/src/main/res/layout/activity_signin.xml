<!--        android:drawableLeft="@drawable/google"-->
<!--        android:layout_toRightOf="@+id/signin_btn"-->
<!--        android:layout_marginHorizontal="10dp"-->

<!--        android:text="Google"-->

<!--        />-->

</LinearLayout>
</RelativeLayout>